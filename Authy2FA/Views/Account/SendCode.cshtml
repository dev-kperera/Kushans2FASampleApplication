@model Authy2FA.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send";
}

<h3>Get your verification code</h3>
<hr />

@using (Html.BeginForm("SendCode", "Account", new { Model.ReturnUrl }, FormMethod.Post, new { @class = "form-inline", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <div class="row">
        <strong>Select Two-Factor Authentication Provider:</strong>
    </div>
    <div class="form-group row">
        @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new { @class = "form-control" })
    </div>
    <div class="row">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
